<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ColorsBasicsAplicacio" parent ="Theme.EnergySaver">
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textColor">@color/TitolColor</item>
        <item name="android:textSize">@dimen/TitolSize</item>

    </style>

    <style name="SplashTheme" parent="ColorsBasicsAplicacio">
        <item name="android:windowBackground">@drawable/splashscreen
        </item>

    </style>

    <style name ="ColorsBasicsAplicacio.NoactionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="Bottons">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textBtnColor</item>
        <item name="android:textSize">@dimen/btnTextSize</item>
    </style>

    <style name="TextViews">
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:textColor">@color/TitolColor</item>
        <item name="android:textSize">@dimen/CampsSize</item>
    </style>

    <style name="textColorNegre">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/CampsSize</item>
    </style>

    <style name="stlTitolInformes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:background">@color/TitolColor</item>
        <item name="android:fontFamily">@font/asap_bold</item>
        <item name="android:paddingStart">@dimen/TitolPantallaSize</item>
        <item name="android:paddingEnd">@dimen/TitolPantallaSize</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>