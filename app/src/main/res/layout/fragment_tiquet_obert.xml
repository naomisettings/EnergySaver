<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".tiquetobert.TiquetObertFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:transitionGroup="true">

                <TextView
                    android:id="@+id/txtViewTitolTiquetOber"
                    style="@style/ColorsBasicsAplicacio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/txtViewTiquetTitolObert" />

                <TextView
                    android:id="@+id/txtViewObrirTiquetMotiu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="35dp"
                    android:fontFamily="@font/asap_bold"
                    android:text=""
                    android:textColor="@color/TitolColor"
                    android:textSize="@dimen/CampsSize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="351dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtViewTiquetObertDesc"
                        style="@style/textColorNegre"
                        android:layout_width="170dp"
                        android:layout_height="332dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="6dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgViewCarregarBBDD"
                        android:layout_width="141dp"
                        android:layout_height="187dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/borde_imatge"
                        android:backgroundTint="#00FFFFFF"
                        android:contentDescription="@string/defaultcd" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtViewResposta"
                    style="@style/ColorsBasicsAplicacio"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/asap_bold"
                    android:text="@string/txtViewResposta"
                    android:textSize="@dimen/CampsSize" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtViewSenseResposta"
                        android:layout_width="333dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/txtViewSenseResposta"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/CampsSize"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txtViewMostraResposta"
                        style="@style/textColorNegre"
                        android:layout_width="322dp"
                        android:layout_height="186dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:textSize="@dimen/CampsSize"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/bttnResposta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/botonsshadow"
                        android:text="@string/bttnResposta"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtViewMostraResposta" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</layout>