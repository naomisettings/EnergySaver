<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="titolVar"
            type="cat.copernic.johan.energysaver.tiquetobert.TiquetObertFragment" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tiquetobert.TiquetObertFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewTitolTiquetOber"
                style="@style/ColorsBasicsAplicacio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="15dp"
                android:text="@string/txtViewTiquetTitolObert" />

            <TextView
                android:id="@+id/txtViewObrirTiquetMotiu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/asap_bold"
                android:text="@={titolVar.titol}"
                android:textColor="@color/TitolColor"
                android:textSize="@dimen/CampsSize" />

            <TextView
                android:id="@+id/txtViewTiquetObertDesc"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:fontFamily="@font/asap_bold"
                android:text="@={titolVar.descripcio}"
                android:textColor="@color/TitolColor"
                android:textSize="@dimen/CampsSize" />

            <ImageView
                android:id="@+id/imgViewCarregarBBDD"
                android:layout_width="match_parent"
                android:layout_height="279dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="35dp"
                android:contentDescription="@string/defaultcd"
                android:src="@drawable/common_full_open_on_phone" />


        </LinearLayout>
    </FrameLayout>


</layout>