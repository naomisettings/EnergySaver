<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/menuEnergies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".introduirconsums.MenuEnergies">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgvTitolMenu"
                android:layout_width="271dp"
                android:layout_height="50dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/energy2" />

            <ImageButton
                android:id="@+id/imgbAigua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/BtnColor"
                android:contentDescription="@string/defaultcd"
                android:src="@drawable/waterdrop"
                app:layout_constraintEnd_toStartOf="@+id/imgbLlum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgvTitolMenu" />

            <ImageButton
                android:id="@+id/imgbLlum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="35dp"
                android:backgroundTint="@color/BtnColor"
                android:contentDescription="@string/defaultcd"
                android:src="@drawable/lightbulb"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgbAigua"
                app:layout_constraintTop_toBottomOf="@+id/imgvTitolMenu" />

            <ImageButton
                android:id="@+id/imgbGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/BtnColor"
                android:contentDescription="@string/defaultcd"
                android:src="@drawable/flame"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgbLlum" />

            <ImageButton
                android:id="@+id/imgbGasoil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="35dp"

                android:backgroundTint="@color/BtnColor"
                android:contentDescription="@string/defaultcd"
                android:src="@drawable/gasoilconsum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgbGas"
                app:layout_constraintTop_toBottomOf="@+id/imgbLlum" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>