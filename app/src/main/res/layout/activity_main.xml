<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtRegistre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/identifica_t"
        android:textColor="@color/TitolColor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewtTitol" />

    <TextView
        android:id="@+id/txtCorreu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/correu"
        android:textColor="@color/TitolColor"
        android:textSize="@dimen/CampsSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistre2" />

    <EditText
        android:id="@+id/editTextCorreu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:fontFamily="@font/asap_bold"
        android:hint="@string/correu_el_ctronic"
        android:inputType="textEmailAddress"
        android:textColor="@color/material_on_background_disabled"
        android:textColorLink="@color/TitolColor"
        android:textSize="@dimen/CampsSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreu"
        android:autofillHints="" />

    <TextView
        android:id="@+id/txtContrasenya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/contrasenya"
        android:textColor="@color/TitolColor"
        android:textSize="@dimen/CampsSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCorreu" />

    <EditText
        android:id="@+id/editTextContrasenya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:fontFamily="@font/asap_bold"
        android:hint="@string/Editcontrasenya"
        android:inputType="textPersonName"
        android:textColor="@color/material_on_background_disabled"
        android:textColorLink="@color/TitolColor"
        android:textSize="@dimen/CampsSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasenya"
        android:autofillHints="" />

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/BtnColor"
        android:gravity="center"
        android:text="@string/btnvalidar"
        android:textAlignment="center"
        android:textColor="@color/textBtnColor"
        android:textSize="@dimen/btnTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextContrasenya" />

    <TextView
        android:id="@+id/txtRegistre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/registre"
        android:textColor="@color/TitolColor"
        android:textSize="@dimen/CampsSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirmar" />

    <ImageView
        android:id="@+id/imageViewtTitol"
        android:layout_width="229dp"
        android:layout_height="64dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/titol"
        android:scrollbarSize="60dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/energy2" />

</androidx.constraintlayout.widget.ConstraintLayout>